{
  "name": "@contentful/integration-test-utils",
  "description": "Utilities for Contentful integration tests",
  "version": "0.0.1-determined-by-semantic-release",
  "license": "MIT",
  "author": "Contentful <opensource@contentful.com>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/integration-test-utils.git"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release"
  },
  "bin": {
    "clean-up-test-spaces": "./bin/clean-up-test-spaces"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/integration-test-utils.esm.js",
  "size-limit": [
    {
      "path": "dist/integration-test-utils.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/integration-test-utils.esm.js",
      "limit": "100 KB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next",
      "next-major"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/node": "^18.11.18",
    "husky": "^8.0.3",
    "semantic-release": "^20.0.2",
    "size-limit": "^4.11.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "contentful-management": "^10.0.0"
  }
}
